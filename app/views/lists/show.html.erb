<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @list.photo.attached? ? cl_image_path(@list.photo.key) : image_path('https://ducunl0s4svtl.cloudfront.net/wp-content/uploads/2017/10/flat-clapperboard-icon_1063-38.jpg') %>);">
  <div class="container">
    <h1 class="py-3"><%= @list.name %></h1>
    <%= link_to "Home", lists_path, class: "btn btn-warning" %>
  </div>
</div>
<div class="container d-flex">
  <div class="py-3 col-8">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="border shadow rounded p-3 d-flex justify-content-between">
        <div>
          <%= image_tag bookmark.movie.poster_url, alt: "Poster of the movie #{bookmark.movie.title}", width: 180 %>
        </div>
        <div class="p-2">
          <h2><%= bookmark.movie.title %></h2>
          <p class="border"><%= bookmark.movie.overview %></p>
          <h4>Rating: <%= bookmark.movie.rating %></h4>
          <p>Comment: <%= bookmark.comment %></p>
        </div>
        <%= link_to bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="container col-4">
    <div class="border shadow p-3 sticky-top">
      <h1 class="text-center">Add movie to the list</h1>
      <%= render 'bookmarks/form', bookmark: @bookmark %>
    </div>
  </div>
</div>
